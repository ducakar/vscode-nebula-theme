{
    "name": "nebula-theme",
    "displayName": "Nebula Theme",
    "description": "ðŸŒŒðŸŒ¸ Fresh colors on a dark, cold slate. An almost-material theme for Visual Studio Code.",
    "version": "1.0.5",
    "publisher": "ChirtleLovesDolls",
    "engines": {
        "vscode": "^1.21.0"
    },
    "license": "mit",
    "categories": [
        "Themes"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#27273A",
        "theme": "dark"
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "prebuild": "npm run lint && npm run clean",
        "build": "npm run compile && npm run generateJson",
        "postbuild": "npm run check",
        "clean": "rimraf ./out",
        "compile:watch": "tsc -watch -p ./",
        "generateJson": "ts-node ./scripts/themes/generateJson.ts",
        "check": "ts-node scripts/themes/checks",
        "lint": "tslint -c tslint.json ./src/**/*.ts ./scripts/**/*ts",
        "pretest": "npm run build",
        "test": "node ./node_modules/vscode/bin/test",
        "preview": "npm run build && ts-node ./scripts/preview",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "themes": [
            {
                "id": "nebula-theme",
                "label": "Nebula",
                "uiTheme": "vs-dark",
                "path": "./out/src/Nebula-color-theme.json"
            },
            {
                "label": "Nebula - Console",
                "uiTheme": "vs-dark",
                "path": "./themes/Nebula-color-theme-console.json"
            }
        ],
        "commands": [
            {
                "command": "nebula-theme.activateTheme",
                "title": "Nebula Theme: Activate"
            },
            {
                "command": "nebula-theme.restoreDefaultConfig",
                "title": "Nebula Theme: Reset to default configuration"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Nebula Theme Configuration",
            "properties": {
                "nebula-theme.commentItalics": {
                    "type": "boolean",
                    "default": true,
                    "description": "Does stuff"
                },
                "nebula-theme.themeItalics": {
                    "type": "string",
                    "default": "basic",
                    "description": "Does stuff",
                    "enum": [
                        "none",
                        "basic",
                        "more",
                        "operator"
                    ]
                },
                "nebula-theme.materialize": {
                    "type": "boolean",
                    "default": false,
                    "description": "Does stuff"
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eating-coleslaw/vscode-nebula-theme"
    },
    "bugs": {
        "url": "https://github.com/eating-coleslaw/vscode-nebula-theme/issues"
    },
    "dependencies": {
        "lodash.merge": "^4.6.1",
        "opn": "^5.3.0",
        "rimraf": "^2.6.2"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
