{
    "name": "nebula-theme",
    "displayName": "Nebula Theme",
    "description": "ðŸŒŒðŸŒ¸ Fresh colors on a dark, cold slate. An almost-material theme for Visual Studio Code.",
    "version": "1.0.5",
    "publisher": "ChirtleLovesDolls",
    "engines": {
        "vscode": "^1.21.0"
    },
    "license": "mit",
    "categories": [
        "Themes"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#27273A",
        "theme": "dark"
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "prebuild": "npm run lint && npm run clean",
        "build": "npm run compile && npm run generateJson",
        "postbuild": "npm run check",
        "clean": "rimraf ./out",
        "compile:watch": "tsc -watch -p ./",
        "generateJson": "ts-node ./scripts/icons/generateJson.ts",
        "check": "ts-node scripts/icons/checks",
        "lint": "tslint -c tslint.json ./src/**/*.ts ./scripts/**/*ts",
        "pretest": "npm run build",
        "test": "node ./node_modules/vscode/bin/test",
        "preview": "npm run build && ts-node ./scripts/preview",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "contributes": {
        "themes": [
            {
                "label": "Nebula",
                "uiTheme": "vs-dark",
                "path": "./themes/Nebula-color-theme.json"
            },
            {
                "label": "Nebula - Console",
                "uiTheme": "vs-dark",
                "path": "./themes/Nebula-color-theme-console.json"
            }
        ],
        "commands": [
            {
                "commands": "nebula-theme.activateTheme",
                "title": "%command.activateIcons%"
            },
            {
                "commands": "nebula-theme.restoreDefaultConfig",
                "title": "%command.restoreDefaultConfig%"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Nebula Theme Configuration",
            "properties": {
                "nebula-theme.commentItalics": {
                    "type": "boolean",
                    "defualt": true
                },
                "nebula-theme.themeItalics": {
                    "type": "string",
                    "default": "basic",
                    "enum": [
                        "none",
                        "basic",
                        "more",
                        "operator"
                    ]
                },
                "nebula-theme.materialize": {
                    "type": "boolean",
                    "defualt": false
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eating-coleslaw/vscode-nebula-theme"
    },
    "bugs": {
        "url": "https://github.com/eating-coleslaw/vscode-nebula-theme/issues"
    },
    "dependencies": {
        "lodash.merge": "^4.6.1",
        "opn": "^5.3.0"
    }
}
